@model ChatBot.Web.Models.ChatBotViewModel

@{
    ViewBag.Title = "Bot Chat";
}

<h2>Ask @Model.BotName</h2>

<div class="row">
    <div id="messageBoard" class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-4">
                <div class="alert alert-info">
                    @Model.WelcomeMessage
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-inline">
    <div class="form-group">
        <input id="chatMessageInput" type="text" class="form-control" />
    </div>
    <button id="sendButton" class="btn btn-primary">Send</button>
</div>

@section Scripts {
    <script src="~/js/chatbot.js"></script>
}